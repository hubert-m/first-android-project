            android:textColor="#FFF"
            android:padding="15dp"
            android:gravity="center"
            android:background="#26FFFFFF"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#26000000"
            android:gravity="center"
            android:layout_gravity="start"
            android:padding="11dp"
            android:text="Hubert Machała"
            android:textColor="#FFF"
            android:textSize="21sp"
            android:layout_marginTop="15dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#26000000"
            android:gravity="center"
            android:layout_gravity="end"
            android:padding="11dp"
            android:text="II Rok Informatyka"
            android:textColor="#FFF"
            android:textSize="21sp"
            android:layout_marginTop="5dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#26000000"
            android:gravity="center"
            android:layout_gravity="start"
            android:padding="11dp"
            android:text="Programowanie i bazy danych"
            android:textColor="#FFF"
            android:textSize="21sp"
            android:layout_marginTop="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#26000000"
            android:gravity="center"
            android:layout_gravity="end"
            android:padding="11dp"
            android:text="Mazowiecka Uczelnia Publiczna\nw Płocku"
            android:textColor="#FFF"
            android:textSize="21sp"
            android:layout_marginTop="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#26000000"
            android:gravity="center"
            android:layout_gravity="start"
            android:padding="11dp"
            android:text="Projekt - Java 1"
            android:textColor="#FFF"
            android:textSize="21sp"
            android:layout_marginTop="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#26000000"
            android:gravity="center"
            android:layout_gravity="end"
            android:padding="11dp"
            android:text="www.machalahubert.pl"
            android:textColor="#FFF"
            android:textSize="21sp"
            android:layout_marginTop="5dp" />



